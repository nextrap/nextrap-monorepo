{
    "name": "nte-data-table",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "{projectRoot}/src",
    "projectType": "library",
    "tags": [],
    "release": {
        "version": {
            "currentVersionResolver": "disk",
            "preserveLocalDependencyProtocols": false,
            "manifestRootsToUpdate": ["{projectRoot}"]
        }
    },
    "// targets": "to see all targets run: nx show project content-pane --web",
    "targets": {
        "build": {
            "executor": "@nx/vite:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/{projectRoot}"
            },
            "configurations": {
                "development": {
                    "mode": "development"
                },
                "production": {
                    "mode": "production"
                }
            }
        },
        "nx-release-publish": {
            "executor": "@nx/js:release-publish",
            "options": {
                "packageRoot": "dist/{projectRoot}"
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "passWithNoTests": true,
                "reportsDirectory": "../../coverage/{projectRoot}"
            }
        },
        "cypress-run": {
            "executor": "@nx/cypress:cypress",
            "options": {
                "cypressConfig": "{projectRoot}/cypress.config.cjs",
                "testingType": "component",
                "specPattern": "src/**/*.cy.ts"
            }
        },
        "cypress-open": {
            "executor": "@nx/cypress:cypress",
            "options": {
                "cypressConfig": "{projectRoot}/cypress.config.cjs",
                "testingType": "component",
                "watch": true,
                "specPattern": "src/**/*.cy.ts"
            }
        },
        "cypress-e2e-run": {
            "executor": "@nx/cypress:cypress",
            "options": {
                "cypressConfig": "{projectRoot}/cypress.config.cjs",
                "testingType": "e2e",
                "specPattern": "cypress/e2e/**/*.cy.ts",
                "devServerTarget": "nte-data-table:serve"
            }
        },
        "cypress-e2e-open": {
            "executor": "@nx/cypress:cypress",
            "options": {
                "cypressConfig": "{projectRoot}/cypress.config.cjs",
                "testingType": "e2e",
                "watch": true,
                "specPattern": "cypress/e2e/**/*.cy.ts",
                "devServerTarget": "nte-data-table:serve"
            }
        },
        "serve": {
            "executor": "@nx/vite:dev-server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "nte-data-table:build"
            },
            "configurations": {
                "development": {
                    "buildTarget": "nte-data-table:build:development",
                    "hmr": true
                },
                "production": {
                    "buildTarget": "nte-data-table:build:production",
                    "hmr": false
                }
            }
        }
    }
}
